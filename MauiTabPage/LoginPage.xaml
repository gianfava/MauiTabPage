<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTabPage.LoginPage"
             Title="Login"
             BackgroundColor="White">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <Image Source="logo.png"
               HeightRequest="100"
               HorizontalOptions="Center" />

        <Entry x:Name="UsuarioEntry"
               Placeholder="UsuÃ¡rio"
               Keyboard="Default"
               TextColor="Black"
               IsTextPredictionEnabled="False"
               BackgroundColor="White" />

        <Entry x:Name="SenhaEntry"
               Placeholder="Senha"
               IsPassword="True"
               TextColor="Black"
               IsTextPredictionEnabled="False"
               BackgroundColor="White" />

        <Button Text="Entrar"
                BackgroundColor="#E45A5A"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnEntrarClicked" />

        <Label x:Name="MensagemErro"
               Text=""
               TextColor="Red"
               FontSize="Medium"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

    </StackLayout>
</ContentPage>
